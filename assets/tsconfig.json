{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node", "@types/audioworklet"],
    "baseUrl": ".",
    "paths": {
      "$lib": ["svelte"],
      "$lib/*": ["svelte/*"]
    },
    "lib": ["es2017", "dom"],
    "plugins": [
      {
        "name": "typescript-svelte-plugin"
      }
    ]
  }
}
